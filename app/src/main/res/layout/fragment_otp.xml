<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.OtpFragment">
      <View
          android:id="@+id/view"
          android:layout_width="@dimen/_100sdp"
          android:layout_height="@dimen/_3sdp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@drawable/rounded_corners_bg"/>
    <TextView
        android:id="@+id/tvCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/verify_otp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/manrope_extrabold"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/otp_detail_text"
        android:textColor="@color/black_with_opacity"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCreateAccount" />

    <LinearLayout
        android:id="@+id/otpContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/_16ssp"
            android:background="@drawable/edittext_otp_background"
            android:importantForAutofill="no" />

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/_16ssp"
            android:background="@drawable/edittext_otp_background"
            android:importantForAutofill="no" />

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/_16ssp"
            android:background="@drawable/edittext_otp_background"
            android:importantForAutofill="no" />

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/_16ssp"
            android:background="@drawable/edittext_otp_background"
            android:importantForAutofill="no" />

        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otp5"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/_16ssp"
            android:background="@drawable/edittext_otp_background"
            android:importantForAutofill="no" />
        <Space
            android:layout_width="@dimen/_10sdp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/otp6"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="@dimen/_16ssp"
            android:background="@drawable/edittext_otp_background"
            android:importantForAutofill="no" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/otpContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/tvError"
        android:textSize="@dimen/_12ssp"/>
    <LinearLayout
        android:id="@+id/llCodeNotReceived"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvError">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/didn_t_receive_code"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resend_code"
            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/text_color_orange"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>
    <!-- Verify OTP Button -->
    <Button
        android:id="@+id/btnVerifyOtp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Confirm"
        android:backgroundTint="@color/text_color_orange"
        android:textColor="@android:color/white"
        app:cornerRadius="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/llCodeNotReceived"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
